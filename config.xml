<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets" xmlns:gap = "http://phonegap.com/ns/1.0" id = "com.standardchartered.gooddeedmarathon" versionCode = "10" version = "1.0.0">


    <name>Good Deed Marathon</name>

    <description>Mumbai shows it's heart!</description>

    <author href="http://www.sushil-s.com/" email="sushil.sud@gmail.com">Sushil Sudhakaran</author>

    <preference name="phonegap-version" value="2.9.0" />
    <preference name="fullscreen" value="true" />

    <access origin="*"/>
    <content src="index.html" />
    

    <gap:platform name="android" />
  

    <gap:plugin name="com.phonegap.plugins.facebookconnect">
        <param name="APP_ID" value="622986024390860" />
        <param name="APP_NAME" value="Good Deed Marathon" />
    </gap:plugin>
    <gap:plugin name="nl.x-services.plugins.socialsharing" version="2.3" />
    
    <gap:splash src="splash/ldpi.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="splash/mdpi.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="splash/hdpi.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="splash/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
    
    <icon src="icon.png" />
    

</widget>
