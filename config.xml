<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.example"
        versionCode="10" 
        version   = "1.0.0">
    
    <!-- versionCode is optional and Android only -->

    <name>Good Deed Marathon</name>

    <description>
        Mumbai shows it's heart! 
    </description>

    <author href="http://www.sushil-s.com/" email="sushil.sud@gmail.com">
        Sushil Sudhakaran 
    </author>
    
    <preference name="phonegap-version" value="3.0.0" />
    <preference name="fullscreen" value="true" />

    <access origin="*"/>
    <content src="index.html" />
    
    <gap:platform name="ios" />
    <gap:platform name="android" />

    <gap:plugin name="org.apache.cordova.core.camera" />
    <gap:plugin name="org.apache.cordova.core.media-capture" />
    <gap:plugin name="org.apache.cordova.core.file" />
    <gap:plugin name="org.apache.cordova.core.file-transfer" />
    <gap:plugin name="org.apache.cordova.core.audiohandler" />
    <gap:plugin name="org.apache.cordova.core.media" />

    
<gap:plugin name="com.phonegap.plugins.facebookconnect">
        <param name="APP_ID" value="622986024390860" />
        <param name="APP_NAME" value="Good Deed Marathon" />
    </gap:plugin>
    
    <gap:splash src="splash.png" />
    
    <icon src="icon.png" />
</widget>